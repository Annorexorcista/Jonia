@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Actualizar</title>
    <link rel="icon" href="/img/Green_Leaf_Nature_Logo_Design-removebg-preview.ico">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header" style="background-color:#13142a; color:white;" ><h3 class="mb-0">Restablecer Contraseña</h3></div>
                    <div class="card-body" style="background-color:#13142a;">
                        @if (ViewBag.Restablecido == null)
                        {
                            <form action="@Url.Action("Actualizar","Inicio")" method="post">
                                <input type="hidden" name="token" value="@ViewBag.Token" />

                                <div class="form-group">
                                    <label style="color:white;">Ingrese su correo</label>
                                    <input type="email" class="form-control" name="correo" required />
                                </div>
                                <div class="form-group">
                                    <label style="color:white;">Ingrese una nueva contraseña</label>
                                    <input type="password" class="form-control" name="clave" required />
                                </div>
                                <div class="form-group">
                                    <label style="color:white;">Confirmar contraseña</label>
                                    <input type="password" class="form-control" name="confirmarClave" required />
                                </div>

                                @if (ViewBag.Mensaje != null)
                                {
                                    <div class="alert alert-warning">
                                        @ViewBag.Mensaje
                                    </div>
                                }

                                <div class="form-group">
                                    <button class="btn" type="submit" style="color:white; background-color:#666666;">Cambiar contraseña</button>
                                </div>

                            </form>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <p>Su contraseña fue restablecida.</p>
                                <a class="btn btn-primary" href="@Url.Action("Login","Inicio")">Ingresar</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
