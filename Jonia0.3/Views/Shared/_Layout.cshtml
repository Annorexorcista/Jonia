<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Jonia</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="icon" href="~/img/Green_Leaf_Nature_Logo_Design-removebg-preview.ico" />
</head>
<body>
    <div class="wrapper">
        <aside id="sidebar">
            <div class="h-100">
                <div class="sidebar-logo">
                    <a asp-controller="Home" asp-action="Index">JONIA</a>
                </div>
                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        <hr />
                    </li>
                    <li class="sidebar-item">
                        <a asp-action="Index" asp-controller="Dashboard" class="sidebar-link">
                            <span class="material-symbols-outlined"> empty_dashboard </span>
                            Dashboard
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-controller="Rol" asp-action="Index">
                            <span class="material-symbols-outlined"> badge </span> Roles
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-controller="Usuarios" asp-action="Index">
                            <span class="material-symbols-outlined"> groups </span> Usuarios
                        </a>
                    </li>
                    <li class="sidebar-item dropdown">
                        <a asp-controller="Habitaciones" asp-action="Index" class="sidebar-link">
                            <span class="material-symbols-outlined"> bedroom_parent </span> Habitaciones
                        </a>
                        <div class="dropdown-content">
                            <a asp-controller="TipoHabitacion" asp-action="Index">Tipo Habitaciones</a>
                        </div>
                    </li>
                </ul>
                </li>
                <li class="sidebar-item dropdown">
                    <a asp-controller="Servicios" asp-action="Index" class="sidebar-link">
                        <span class="material-symbols-outlined"> bedroom_parent </span> Servicios
                    </a>
                    <div class="dropdown-content">
                        <a asp-controller="TipoServicio" asp-action="Index">Tipo Servicios</a>
                    </div>
                </li>
                    <li class="sidebar-item">
                        <a asp-controller="Paquetes" asp-action="Index" class="sidebar-link">
                            <span class="material-symbols-outlined"> package_2 </span>
                            Paquetes
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Clientes" asp-action="Index" class="sidebar-link">
                            <span class="material-symbols-outlined"> face </span>
                            Clientes
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-controller="Reservas" asp-action="Index">
                            <span class="material-symbols-outlined"> calendar_month </span>
                            Reservas
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-controller="Abonos" asp-action="Index">
                            <span class="material-symbols-outlined"> paid </span>
                            Abonos
                        </a>
                    </li>
                </ul>
            </div>
        </aside>
        <div class="main">
            <nav class="navbar navbar-expand">
                <button class="btn" id="sidebar-toggle" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a href="#"
                               data-bs-toggle="dropdown"
                               class="nav-icon pe-md-0 me-3"
                               style="color: var(--bs-body-color)">
                                <img src="img/photo-profile_2.jpg"
                                     alt=""
                                     class="avatar img-fluid rounded" />
                                Administrador
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a href="#" class="dropdown-item">Perfil</a>
                                <a href="#" class="dropdown-item">Ajustes</a>
                                <a href="#" class="dropdown-item">Cerrar sesión</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="content px-3 px-2">
                @RenderBody()
            </main>
            <a href="" class="theme-toggle">
                <span class="material-symbols-outlined sun"> light_mode </span>
                <span class="material-symbols-outlined moon"> dark_mode </span>
            </a>
            <footer class="footer fixed-bottom">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <a href="#" class="text-muted">
                                    <strong>JONIA</strong>
                                </a>
                            </p>
                        </div>
                        <div class="col-6 text-end">
                            <ul class="list-inline-item">
                                <li class="list-inline-item">
                                    <a href="#" class="text-muted">Contacto</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="text-muted">Sobre nosotros</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="text-muted">Términos y condiciones</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
