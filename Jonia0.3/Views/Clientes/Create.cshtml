
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="icon" href="/img/Green_Leaf_Nature_Logo_Design-removebg-preview.ico" />
</head>

<body>
    <h1>Crear</h1>

    <h4>Usuarios</h4>
    <hr />
    @if (ViewBag.Creado == null)
    {

        <form action="@Url.Action("Create","Clientes")" method="post">
            <div class="row">
                <div class="col form-group">
                    <label class="control-label">Nro de documento</label>
                    <input class="form-control" type="number" placeholder="Nro de documento" name="NroDocumento" value="@(ViewBag.NroDocumento != null ? ViewBag.NroDocumento: "")" required>
                </div>
                <div class="col form-group">
                    <label class="control-label">Tipo de documento</label>
                    <select class="form-control" name="TipoDocumento" required>
                        <option disabled selected>Tipo de documento</option>
                        <option value="1">Tarjeta de identidad</option>
                        <option value="2">Cédula de ciudadanía</option>
                        <option value="3">Tarjeta de extranjería</option>
                        <option value="4">Cédula de extranjería</option>
                        <option value="5">Pasaporte</option>
                        <option value="6">Tipo de documento extranjero</option>
                    </select>

                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" type="text" placeholder="Nombres" name="Nombre" value="@(ViewBag.Nombre != null ? ViewBag.Nombre: "")" required>
                </div>
                <div class="col form-group">
                    <label class="control-label">Apellido</label>
                    <input class="form-control" type="text" placeholder="Apellidos" name="Apellido" value="@(ViewBag.Apellido != null ? ViewBag.Apellido: "")" required>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label class="control-label">Correo</label>
                    <input class="form-control" type="email" placeholder="Correo" name="Correo" value="@(ViewBag.Correo != null ? ViewBag.Correo: "")" required>
                </div>
                <div class="col form-group">
                    <label class="control-label">Contraseña</label>
                    <input class="form-control" type="password" placeholder="Contraseña" name="Contrasena" value="@(ViewBag.Contrasena != null ? ViewBag.Contrasena: "")" required>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label class="control-label">Confirme su contraseña</label>
                    <input class="form-control" type="password" placeholder="Confirme contraseña" name="ConfirmarClave" required>
                </div>
                <div class="col form-group">
                    <label class="control-label">Celular</label>
                    <input class="form-control" type="number" placeholder="Numero de telefono" name="Celular" value="@(ViewBag.Celular != null ? ViewBag.Celular: "")" required>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label class="control-label">Direccion</label>
                    <input class="form-control" type="text" placeholder="Direccion" name="Direccion" value="@(ViewBag.Direccion != null ? ViewBag.Direccion: "")" required>
                </div>
                <div class="col form-group">
                    <label class="control-label">Fecha de nacimiento</label>
                    <input class="form-control" type="date" placeholder="Fehca de nacimiento" name="FechaNacimiento" value="@(ViewBag.FechaNacimiento != null ? ViewBag.FechaNacimiento: "")" required>
                </div>
            </div>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Mensaje
                </div>
            }

            <div class="form-group col">
                <button class="btn btn-dark mt-3">
                    <span class="#">Registrar</span>
                </button>
                <a class="btn btn-secondary mt-3" asp-action="Index">Regresar</a>
            </div>
        </form>
    }
</body>
</html>
