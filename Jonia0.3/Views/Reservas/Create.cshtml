@model Jonia0._3.Models.ReservaViewModel

<h4>Reserva</h4>
<hr />
<div class="row mt-2 mb-2">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col">
                    <label asp-for="Reserva.NroDocumentoCliente" class="control-label">Cliente</label>
                    <select asp-for="Reserva.NroDocumentoCliente" class="form-control" asp-items="ViewBag.Clientes">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>
                <div class="form-group col">
                    <label asp-for="Reserva.NroDocumentoTrabajador" class="control-label">Encargado</label>
                    <select asp-for="Reserva.NroDocumentoTrabajador" class="form-control" asp-items="ViewBag.Trabajadores">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>

                <div class="form-group col">
                    <label asp-for="Reserva.Informacion" class="control-label">Información</label>
                    <textarea asp-for="Reserva.Informacion" class="form-control"></textarea>
                    <span asp-validation-for="Reserva.Informacion" class="text-danger"></span>
                </div>

            </div>

            <hr />

            <div class="row mt-5 mb-5">
                <div class="form-group col">
                    <label asp-for="Reserva.FechaRegistro" class="control-label">Fecha de Registro</label>
                    <input disabled type="date" class="form-control" value="@ViewBag.CurrentDateTime" />
                </div>
                <div class="form-group col">
                    <label asp-for="Reserva.FechaEntrada" class="control-label">Fecha de Entrada</label>
                    <input id="fechaini" type="date" class="form-control" />
                </div>
                <div class="form-group col">
                    <label asp-for="Reserva.FechaSalida" class="control-label">Fecha de Salida</label>
                    <input id="fechafin" type="date" class="form-control" />
                </div>
            </div>

            <div class="row mt-5 mb-5">
                <div class="form-group col">
                    <label asp-for="Reserva.NumeroAdultos" class="control-label">Número de Personas</label>
                    <input id="nroper" disabled class="form-control" />
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label">Descuento</label>
                    <input id="des" placeholder="%" type="number" onkeyup="actualizarTotalPaquete();" class="form-control" />
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label">Días</label>
                    <input id="dias" type="number" disabled class="form-control" />
                </div>

                <div class="form-group col">
                    <label asp-for="Reserva.MetodoPago" class="control-label">Método de pago</label>
                    <select asp-for="Reserva.MetodoPago" class="form-control" asp-items="@(new SelectList(ViewBag.Metodo, "IdMp", "Nombre"))">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>

            </div>

            <hr />
            <div class="row mt-5 mb-3">
                <div class="form-group col-md-3">
                    <label asp-for="Reserva.DetalleReservaPaquete" class="control-label">Paquete</label>
                    <select id="paquetesel" class="form-control" asp-items="@(new SelectList(ViewBag.Paquetes, "IdPaquete", "Nombre"))">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="Reserva.DetalleReservaPaquete" class="control-label">Costo</label>
                    <input id="costopaq" placeholder="$" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3 mb-5">
                    <label asp-for="Reserva.DetalleReservaPaquete" class="control-label">Habitacion</label>
                    <input id="nombrehab" disabled class="form-control" />
                </div>

                <div class="form-group col-md-3 mb-5">
                    <label asp-for="Reserva.DetalleReservaPaquete" class="control-label">Tipo de Habitacion</label>
                    <input id="tipohab" disabled class="form-control" />
                </div>
            </div>
            <hr />

            <div class="row mt-5 mb-3">
                <div class="form-group col-md-3">
                    <label asp-for="Reserva.DetalleReservaServicios" class="control-label">Servicios</label>
                    <select id="serviciosel" size="1" class="form-control" asp-items="@(new SelectList(ViewBag.Servicios, "IdServicio", "Nombre"))">
                        <option selected disabled>-- Seleccionar --</option>
                    </select>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="Reserva.DetalleReservaServicios" class="control-label">Costo</label>
                    <input id="costoser" disabled placeholder="$" onchange="" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3 mt-1 mb-5">
                    <label asp-for="Reserva.DetalleReservaServicios" class="control-label">Tipo de Servicio</label>
                    <input id="tiposer" disabled class="form-control" />
                </div>

                <div class="form-group col-md-3 mt-lg-4">
                    <button id="add-service" type="button" class="btn btn-primary">Añadir Servicio</button>
                    <input id="serviciosSeleccionados" type="hidden" name="serviciosSeleccionados" />
                </div>
                <div class="col-md-4 star-50">
                    <table id="servicios-table" class="table table-striped position-relative bottom-50" border="1">
                        <thead>
                            <tr>
                                <th>Servicio</th>
                                <th>Costo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Los servicios seleccionados se agregarán aquí -->
                        </tbody>
                    </table>
                </div>
            </div>

            <hr />

            <div class="row mt-5 mb-5">
                <div class="form-group col-md-3">
                    <label asp-for="Reserva.Iva" class="control-label"></label>
                    <input id="iva" readonly placeholder="$" asp-for="Reserva.Iva" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Reserva.Subtotal" class="control-label"></label>
                    <input id="subtotal-reserva" placeholder="$" readonly asp-for="Reserva.Subtotal" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Reserva.Total" class="control-label"></label>
                    <input id="totalreserva" placeholder="$" readonly asp-for="Reserva.Total" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-1">
                    <input type="submit" value="Crear" class="btn btn-primary" />

                </div>
                <div class="form-group col-md-1">
                    <a class="btn btn-primary" asp-action="Index">Regresar</a>
                </div>
            </div>
        </form>
        <br />

    </div>
</div>







@section Scripts {
    @{
        <script src="~/js/calculosreservas.js"></script>
        
    }
}