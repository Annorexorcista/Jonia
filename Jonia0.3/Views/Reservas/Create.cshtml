        })
    })
</script>

<script>
    $('#serviciosel').change(function () {
        var idservicio = $(this).val()
        $.ajax({
            url: '/Reservas/obtenerTipoServicio',
            type: 'GET',
            data: { id: idservicio, },
            success: function (data) {
                var nombre = data.nombre;
                $('#tiposer').val(nombre)
