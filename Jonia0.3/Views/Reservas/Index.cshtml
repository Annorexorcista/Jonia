            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaSalida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroAdultos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroNinos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetodoPagoNavigation.Nombre)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.EstadoNavigation.Nombre)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdReserva">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdReserva">Detalles</a> |
            </td>
        </tr>
}
    </tbody>
</table>
