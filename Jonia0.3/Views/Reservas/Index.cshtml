@model IEnumerable<Jonia0._3.Models.Reserva>

<h1>Reservas</h1>

<p>
    <a asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Cliente
            </th>
            <th>
                Encargado
            </th>
            <th>
                Fecha de Registro
            </th>
            <th>
                Fecha de Entrada
            </th>
            <th>
                Fecha de Salida
            </th>
            <th>
                Adultos
            </th>
            <th>
                Niños
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
