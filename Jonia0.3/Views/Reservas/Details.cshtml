@model Jonia0._3.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Informacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Informacion)
        </dd>
        <dt class = "col-sm-2">
            Fecha de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt class = "col-sm-2">
            Fecha de entrada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEntrada)
        </dd>
        <dt class = "col-sm-2">
            Fecha de salida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaSalida)
        </dd>
        <dt class = "col-sm-2">
            Nro Personas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroPersonas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Iva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Iva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subtotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subtotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            Metodo de pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MetodoPagoNavigation.IdMp)
        </dd>
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NroDocumentoClienteNavigation.NroDocumento)
        </dd>
        <dt class = "col-sm-2">
            Encargado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NroDocumentoTrabajadorNavigation.NroDocumento)
        </dd>
    </dl>
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>Paquete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Paquete)
            {
                <tr>
                    <td>
                        @item.IdPaqueteNavigation.Nombre
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>Servicios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Servicios)
            {
                <tr>
                    <td>
                        @item.IdServicioNavigation.Nombre
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div>
    <a class="btn btn-secondary mb-4" asp-action="Index">Regresar</a>
</div>
