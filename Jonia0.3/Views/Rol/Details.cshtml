@model Jonia0._3.Models.Rol

<h1>Detalles</h1>

<div>
    <h4>Rol</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    <table class="table-sm border">
        <thead>
            <tr>
                <th>PERMISOS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Permisos)
            {
            <tr>
                 <td>
                        @item.IdPermisoNavigation.Nombre
                    </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdRol">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
